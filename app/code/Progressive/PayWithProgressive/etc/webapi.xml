<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/progressive/checkout/init" method="POST">
        <service class="Progressive\PayWithProgressive\Api\CheckoutManagerInterface" method="initCheckout"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/progressive/checkout/verify" method="POST">
        <service class="Progressive\PayWithProgressive\Api\CheckoutPaymentManagerInterface" method="verifyProgressive"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/v1/progressive/delivery/confirm" method="POST">
        <service class="Progressive\PayWithProgressive\Api\DeliveryManagerInterface" method="confirmDelivery"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
