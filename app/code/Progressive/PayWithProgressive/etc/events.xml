<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:Magento:Framework:Event/etc/events.xsd">
    <event name="payment_method_is_active">
        <observer
                instance="Progressive\PayWithProgressive\Observer\PaymentMethodAvailable"
                shared="false"
                name="Progressive_PayWithProgressive"/>
    </event>
    <event name="customer_logout">
        <observer
                instance="Progressive\PayWithProgressive\Observer\CustomerLogout"
                shared="false"
                name="Progressive_PayWithProgressive"/>
    </event>
    <event name="progressive_place_order_success">
        <observer
                instance="Progressive\PayWithProgressive\Observer\AfterOrderPlaceSuccess"
                shared="false"
                name="Progressive_PayWithProgressive"/>
    </event>
    <event name="sales_quote_item_set_product">
	<observer name = "set_item_is_used" instance="Progressive\PayWithProgressive\Observer\SetItemIsUsed" />
  <observer name = "set_item_is_leasable" instance="Progressive\PayWithProgressive\Observer\SetItemIsLeasable" />
    </event>
  <event name="sales_order_place_after">
    <observer
      instance="Progressive\PayWithProgressive\Observer\ExemptSalesTax"
      shared="false"
      name="Progressive_PayWithProgressive"/>
  </event>

</config>
