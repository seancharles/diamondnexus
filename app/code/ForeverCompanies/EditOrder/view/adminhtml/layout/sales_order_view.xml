<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="mpeditorder_edit_order"
                   class="Mageplaza\EditOrder\Block\Adminhtml\Order\EditOrder"
                   template="ForeverCompanies_EditOrder::order/edit.phtml"
                   ifconfig="mpeditorder/general/enabled">
                <block class="Magento\Sales\Block\Adminhtml\Order\Create\Messages" name="message"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\OrderInfo"
                       name="mpeditorder_edit_order_info"
                       template="Mageplaza_EditOrder::order/edit/order_info.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\CustomerInfo"
                       name="mpeditorder_edit_account_info"
                       template="Mageplaza_EditOrder::order/edit/customer_info.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\BillingAddress"
                       name="mpeditorder_edit_billing_address"
                       template="Mageplaza_EditOrder::order/edit/billing_address.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\ShippingAddress"
                       name="mpeditorder_edit_shipping_address"
                       template="Mageplaza_EditOrder::order/edit/shipping_address.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\PaymentMethod"
                       name="mpeditorder_edit_payment_method"
                       template="Mageplaza_EditOrder::order/edit/payment_method.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\ShippingMethod"
                       name="mpeditorder_edit_shipping_method"
                       template="Mageplaza_EditOrder::order/edit/shipping_method.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\EditOrder" name="mpeditorder_edit_items"
                       template="Mageplaza_EditOrder::order/edit/items.phtml"/>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\EditOrder" name="mpeditorder_quick_edit"
                       template="Mageplaza_EditOrder::order/edit/quick_edit.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>
