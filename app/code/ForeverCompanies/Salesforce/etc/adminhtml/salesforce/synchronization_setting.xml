<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="sync" translate="label"
           type="text" sortOrder="90"
           showInDefault="1" showInWebsite="1"
           showInStore="1">
        <label>Synchronization Settings</label>
        <group id="order" translate="label" type="text"
               sortOrder="50" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Order</label>
            <field id="enable" translate="label comment"
                   type="select" sortOrder="10"
                   showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Enable</label>
                <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                <tooltip><![CDATA[Synchronize to Orders when:
                        <ol>
                        <li>Customer place order</li>
                        <li>Admin create an order</li>
                        </ol>]]></tooltip>
                <config_path>salesforcecrm/sync/order</config_path>
            </field>
            <field id="sync_mode"
                   translate="label"
                   type="select"
                   sortOrder="15"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Sync Mode</label>
                <source_model>ForeverCompanies\Salesforce\Model\Config\Source\SyncMode</source_model>
                <config_path>salesforcecrm/sync/order_mode</config_path>
                <depends>
                    <field id="enable">1</field>
                </depends>
                <validate>required-entry</validate>
            </field>
            <field id="salesforce_sync_orders" translate="button_label" sortOrder="20"
                   showInDefault="1" showInWebsite="0" showInStore="0">
                <button_label>Sync All Orders Now</button_label>
                <attribute type="button_url">salesforce/queue/order</attribute>
                <frontend_model>ForeverCompanies\Salesforce\Block\System\Config\Form\Button\Button</frontend_model>
            </field>
        </group>
    </group>
</include>
