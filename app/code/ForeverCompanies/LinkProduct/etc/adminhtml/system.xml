<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<tab id="forevercompanies" sortOrder="400" translate="label">
			<label>ForeverCompanies</label>
		</tab>
		<section id="forevercompanies_link_products" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="5" translate="label">
			<label>Link Products</label>
			<tab>forevercompanies</tab>
			<resource>ForeverCompanies_LinkProduct::config_forevercompanies_link_product</resource>
			<group id="about" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="0" translate="label">
				<attribute type="expanded">1</attribute>
				<label>About ForeverCompanies Link Products</label>
				<comment><![CDATA[
                    <div id="forevercompanies-info">
                        Copyright © 2020 <a href="https://www.forevercompanies.com/magento2/extensions.html?utm_source=reindex&utm_medium=admin" target="_blank">ForeverCompanies, LLC</a>
                        <a href="https://github.com/forevercompanies/magento2-link-product" target="_blank">Documentation</a>
                        <a href="https://www.forevercompanies.com/?utm_source=reindex&utm_medium=admin#support">Support</a>
                        <a href="https://www.forevercompanies.com/magento2/extensions.html?utm_source=reindex&utm_medium=admin" target="_blank">More Extensions</a>
                    </div>
                    <hr style="border-top: 1px solid #e3e3e3" />
                    <style>
                        #forevercompanies-info a {
                            font-weight: bold;
                            border-left: 2px solid #e3e3e3;
                            padding-left:10px;
                            padding-right:10px;
                            color: #ef7e1e;
                        }

                        #forevercompanies-info a:first-child {
                            padding-left: 5px;
                            border-left: none;
                        }

                        #forevercompanies-info {
                            padding-bottom: 5px;
                        }
                     </style>]]></comment>
				<field id="module_version" translate="label" type="label" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Module Version</label>
					<frontend_model>ForeverCompanies\LinkProduct\Block\Adminhtml\System\Config\Form\Module\Version</frontend_model>
				</field>
				<field id="composer_version" translate="label" type="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
					<label>Composer Version</label>
					<frontend_model>ForeverCompanies\LinkProduct\Block\Adminhtml\System\Config\Form\Composer\Version</frontend_model>
				</field>
			</group>
		</section>
	</system>
</config>
