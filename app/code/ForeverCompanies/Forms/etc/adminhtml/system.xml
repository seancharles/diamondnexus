<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:App/etc/routes.xsd">
    <system>
        <section id="forevercompanies_forms" translate="label" type="text" sortOrder="150" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Forms</label>
            <tab>forevercompanies</tab>
            <resource>ForeverCompanies_Gifts::config</resource>
            <group id="purchase" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Free gift with purchase</label>
                <field id="api_key" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>API Key</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
