<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="sales_order_item_price"/>
    <body>
        <container name="content">
            <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\QuickEdit" name="mpeditorder.quick.edit" template="Mageplaza_EditOrder::order/edit/quick/form.phtml">
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\OrderInfo" name="mpeditorder.order.info" template="Mageplaza_EditOrder::order/edit/info/form.phtml" />
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\CustomerInfo" name="mpeditorder.customer" template="Mageplaza_EditOrder::order/edit/customer/form.phtml" />
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\BillingAddress" name="mpeditorder.billing.address" template="Mageplaza_EditOrder::order/edit/address/form.phtml" />
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\ShippingAddress" name="mpeditorder.shipping.address" template="Mageplaza_EditOrder::order/edit/address/form.phtml" />
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\ShippingMethod" name="mpeditorder.shipping.method" template="Mageplaza_EditOrder::order/edit/shipping/method/list.phtml" />
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\PaymentMethod" name="mpeditorder.payment.method" template="Mageplaza_EditOrder::order/edit/payment/method/list.phtml">
                    <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\Payment\ListPayment" name="billing_method" template="Magento_Sales::order/create/billing/method/form.phtml" />
                </block>
                <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\OrderItems" name="mpeditorder.items" template="Mageplaza_EditOrder::order/edit/items/form.phtml">
                    <block class="Magento\Sales\Block\Adminhtml\Order\Create\Search" name="search" template="Magento_Sales::order/create/abstract.phtml">
                        <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\Items\Search\Grid" name="search_grid" />
                    </block>
                    <block class="Magento\Sales\Block\Adminhtml\Order\Create\Items" name="order_items" template="Mageplaza_EditOrder::order/edit/items/items.phtml">
                        <block class="Mageplaza\EditOrder\Block\Adminhtml\Order\Edit\Items\Grid" name="items_grid" template="Mageplaza_EditOrder::order/edit/items/grid.phtml" />
                    </block>
                </block>
                <block class="Magento\Backend\Block\Template" name="mpeditorder.js" template="Magento_Sales::order/create/js.phtml" />
            </block>
        </container>
    </body>
</page>
