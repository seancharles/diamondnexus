/** @var \Mageplaza\EditOrder\Block\Adminhtml\Logs\Order\ShippingMethod $block */
$order = $block->getOrder();
$oldShippingData = $block->getOldShippingMethodData()
?>

<div class="admin__page-section-item order-shipping-method order-shipping-address">
    <div class="admin__page-section-item-title">
        <span class="title"><?= /* @noEscape */ __('Shipping &amp; Handling Information') ?></span>
    </div>
    <?php if ($block->checkUpdateShippingMethod()) : ?>
        <table class="admin__table-secondary old-shipping-method">
            <caption><?= $block->escapeHtml(__('Old Information')) ?></caption>
            <tr>
                <td>
                    <?php if ($oldShippingData) : ?>
                        <strong><?= /** @noEscape */ $oldShippingData['ship_description'] ?></strong>
                        <span class="price">
                            <?= /** @noEscape */ $oldShippingData['ship_amount'] ?>
                        </span>
                    <?php else : ?>
                        <strong><?= /** @noEscape */ __('No method') ?></strong>
                    <?php endif; ?>
                </td>
            </tr>
        </table>
        <table class="admin__table-secondary update-shipping-method">
            <caption><?= $block->escapeHtml(__('Update Information')) ?></caption>
            <tr>
                <td>
                    <strong><?= /** @noEscape */ $order->getShippingDescription() ?></strong>
                    <span class="price">
                        <?= /** @noEscape */ $block->getFormatPrice($order->getShippingAmount()) ?>
                    </span>
                </td>
            </tr>
        </table>
    <?php else : ?>
        <table class="admin__table-secondary">
            <caption class="title-no-update"><?= /** @noEscape */ __('There is no update.') ?></caption>
        </table>
    <?php endif; ?>
</div>
