<script>
    function toggleCustomDiscount (checkbox, id) {
        var elemId       = 'mpeditorder-custom-discount-' + id,
            selectTypeId = 'mpeditorder-custom-discount-type-' + id,
            inputValueId = 'mpeditorder-custom-discount-value-' + id;

        $(selectTypeId).disabled = !checkbox.checked;
        $(inputValueId).disabled = !checkbox.checked;
        checkbox.checked ? $(elemId).show() : $(elemId).hide();
    }

    function toggleApplyDiscount(checkbox, customDiscountEl, customInput, customLabel, detailCustomEl) {
        if (checkbox.checked) {
            $(customDiscountEl).show();
            $(customLabel).show();
            $(customInput).checked = false;
        }
        else {
            $(customLabel).hide();
            $(detailCustomEl).hide();
        }
    }
</script>
